{
    "compilerOptions": {
        "target": "es2017",
        "module": "es2015",
        "moduleResolution": "node",
        "rootDir": "./src",
        "outDir": "./",
        "baseUrl": "./packages",
        "lib": [
            "es2017",
            "dom",
            "dom.iterable"
        ],
        "paths": {
            "@songhay/*": [
                "./*/src"
            ]
        },
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "inlineSources": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
    },
    "include": [
        "src/*.ts"
    ],
    "exclude": [],
    "references": [
        {
            "path": "packages/input-autocomplete"
        },
    ]
}